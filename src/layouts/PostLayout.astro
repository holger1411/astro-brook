---
import BaseLayout from './BaseLayout.astro';
import PostNavigation from '../components/PostNavigation.astro';
import { formatDate } from '../utils/date';
import { optimizeImagePath } from '../utils/optimizeImagePath';

const { frontmatter, headings, prevPost, nextPost } = Astro.props;
const { title, date, tags, image, excerpt } = frontmatter;
const slug = Astro.url.pathname.split('/').filter(Boolean).pop();

// Ensure image path is optimized
const optimizedImagePath = image ? optimizeImagePath(image) : null;

// Estimated reading time
const WORDS_PER_MINUTE = 225;
const content = await Astro.slots.render('default');
const contentText = content.replace(/<\/?[^>]+(>|$)/g, ' ');
const wordCount = contentText.split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(wordCount / WORDS_PER_MINUTE));

// Structured data for SEO
const publishDate = new Date(date);
---

<BaseLayout 
  title={title} 
  description={excerpt} 
  image={optimizedImagePath || image}
  type="article"
  publishedDate={publishDate}
>
  <article class="max-w-3xl mx-auto" id="main-content">
    <header class="mb-10">
      <div class="text-gray-500 dark:text-gray-400 text-sm mb-2">
        <time datetime={publishDate.toISOString()}>{formatDate(date)}</time> â€¢ <span aria-label={`${readingTime} minute read`}>{readingTime} min read</span>
      </div>
      <h1 class="text-5xl mb-6" transition:name={`title-${slug}`}>{title}</h1>
      {excerpt && <p class="text-xl text-gray-500 dark:text-gray-400">{excerpt}</p>}
      
      {optimizedImagePath && (
        <div class="mt-6 aspect-video rounded-lg overflow-hidden" transition:name={`image-${slug}`}>
          <img 
            src={optimizedImagePath} 
            alt={`Featured image for "${title}"`}
            class="w-full h-full object-cover" 
            loading="eager" 
            decoding="async"
            width="1200"
            height="675"
          />
        </div>
      )}
      
      {tags && tags.length > 0 && (
        <div class="mt-6 flex flex-wrap gap-2" aria-label="Tags">
          {tags.map((tag) => (
            <a 
              href={`/tags/${tag}`} 
              class="inline-flex items-center rounded-md bg-gray-100 dark:bg-gray-800 px-2.5 py-0.5 text-xs font-medium text-gray-800 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-blue-400 dark:focus:ring-offset-gray-900"
              aria-label={`View all posts tagged ${tag}`}
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>
    
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <slot />
    </div>

    <PostNavigation prevPost={prevPost} nextPost={nextPost} />
  </article>
</BaseLayout>
