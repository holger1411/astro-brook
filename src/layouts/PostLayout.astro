---
import BaseLayout from './BaseLayout.astro';
import { formatDate } from '../utils/date';

const { frontmatter, headings } = Astro.props;
const { title, date, tags, image, excerpt } = frontmatter;

// Estimated reading time
const WORDS_PER_MINUTE = 225;
const content = await Astro.slots.render('default');
const contentText = content.replace(/<\/?[^>]+(>|$)/g, ' ');
const wordCount = contentText.split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(wordCount / WORDS_PER_MINUTE));
---

<BaseLayout title={title} description={excerpt} image={image}>
  <article class="max-w-3xl mx-auto">
    <header class="mb-10">
      <div class="text-gray-500 dark:text-gray-400 text-sm mb-2">
        {formatDate(date)} â€¢ {readingTime} min read
      </div>
      <h1 class="text-5xl mb-6">{title}</h1>
      {excerpt && <p class="text-xl text-gray-500 dark:text-gray-400">{excerpt}</p>}
      
      {image && (
        <div class="mt-6 aspect-video rounded-lg overflow-hidden">
          <img src={image} alt={title} class="w-full h-full object-cover" />
        </div>
      )}
      
      {tags && tags.length > 0 && (
        <div class="mt-6 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <a 
              href={`/tags/${tag}`} 
              class="inline-flex items-center rounded-md bg-gray-100 dark:bg-gray-800 px-2.5 py-0.5 text-xs font-medium text-gray-800 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-700"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>
    
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
