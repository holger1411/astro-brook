---
import '../styles/global.css';
import '../styles/fonts.css';
import { ViewTransitions } from 'astro:transitions';
import DarkModeToggle from '../components/ui/DarkModeToggle.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedDate?: Date;
  modifiedDate?: Date;
  author?: string;
}

const { 
  title, 
  description = "Gemeinschaftlich die Energiewende vor Ort umsetzen - Bürger-Energie-Genossenschaft aus dem Hummetal", 
  image = "/og-image.png",
  type = "website",
  publishedDate,
  modifiedDate,
  author = "Bürger-Energie Hummetal eG"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = image.startsWith('/') ? new URL(image, Astro.site) : image;
const siteName = "Bürger-Energie Hummetal eG";

// Structured data (JSON-LD) for better SEO
const jsonLDWebsite = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": siteName,
  "url": Astro.site?.toString(),
  "description": description,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Kranichweg 8",
    "postalCode": "31855",
    "addressLocality": "Aerzen",
    "addressCountry": "DE"
  },
  "telephone": "05154-4954",
  "email": "buerger-energie.hummetal@t-online.de"
};

const jsonLDArticle = publishedDate ? {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "image": ogImageURL.toString(),
  "author": {
    "@type": "Person",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": siteName,
    "logo": {
      "@type": "ImageObject",
      "url": new URL("/favicon.svg", Astro.site).toString()
    }
  },
  "datePublished": publishedDate.toISOString(),
  "dateModified": modifiedDate ? modifiedDate.toISOString() : publishedDate.toISOString(),
  "mainEntityOfPage": canonicalURL.toString(),
} : null;

const jsonLD = type === 'article' && jsonLDArticle ? jsonLDArticle : jsonLDWebsite;
---

<!DOCTYPE html>
<html lang="de" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Bürger-Energie Hummetal eG</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Enable View Transitions -->
    <ViewTransitions />
    
    <!-- Dark mode initialization script -->
    <script is:inline>
      function applyTheme() {
        document.documentElement.classList.toggle(
          "dark",
          localStorage.theme === "dark" ||
            (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches),
        );
      }
      applyTheme();
      document.addEventListener('astro:after-swap', applyTheme);
    </script>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content={siteName} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />
    
    <!-- Structured data for SEO -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLD)} />
  </head>
  <body class="text-gray-900 bg-white dark:text-gray-100 dark:bg-neutral-950 transition-colors duration-300">
    <div class="min-h-screen bg-white dark:bg-neutral-950 transition-colors duration-300">
      <header class="sticky top-0 z-50 bg-white/80 dark:bg-neutral-950/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-700">
        <div class="mx-auto max-w-4xl px-4 py-4 flex items-center justify-between">
          <a href="/" class="flex items-center" transition:animate="fade">
            <img src="/logo.png" alt="Bürger-Energie Hummetal eG Logo" class="h-12 w-auto" />
          </a>
          
          <div class="flex items-center gap-6">
            <nav class="hidden md:flex items-center gap-6">
              <a href="/" class="nav-link">Home</a>
              <a href="/ueber-uns" class="nav-link">Über uns</a>
              <a href="/projekte" class="nav-link">Projekte</a>
              <a href="/aktuelles" class="nav-link">Aktuelles</a>
              <a href="/mitglied-werden" class="px-6 py-2.5 rounded-lg font-medium transition-all duration-300 hover:shadow-md" style="background-color: #CCE5F7; color: #1f2937;">Mitglied werden</a>
            </nav>
            <DarkModeToggle />
            
            <!-- Mobile Menu Button -->
            <button class="md:hidden p-2" id="mobile-menu-button">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Mobile Menu -->
        <div class="hidden md:hidden bg-white dark:bg-neutral-950 border-t border-gray-200 dark:border-gray-700" id="mobile-menu">
          <nav class="px-4 py-4 space-y-2">
            <a href="/" class="block py-2 nav-link">Home</a>
            <a href="/ueber-uns" class="block py-2 nav-link">Über uns</a>
            <a href="/projekte" class="block py-2 nav-link">Projekte</a>
            <a href="/aktuelles" class="block py-2 nav-link">Aktuelles</a>
            <a href="/mitglied-werden" class="block mx-3 my-2 px-4 py-2.5 rounded-lg text-center font-medium" style="background-color: #CCE5F7; color: #1f2937;">Mitglied werden</a>
          </nav>
        </div>
      </header>
      
      <main transition:animate="fade">
        <slot />
      </main>
      
      <footer class="bg-black border-t border-gray-900 mt-16">
        <div class="max-w-4xl mx-auto px-4 py-12">
          <div class="grid md:grid-cols-4 gap-8">
            <div class="md:col-span-2">
              <h3 class="text-base font-bold mb-4">
                <span class="text-green-500">Bürger-Energie</span> <span class="text-white">Hummetal eG</span>
              </h3>
              <p class="text-gray-300 mb-4 text-sm">
                Gemeinschaftlich die Energiewende vor Ort umsetzen - 
                Seit 2010 für erneuerbare Energien in unserer Region.
              </p>
              <div class="text-xs text-gray-400">
                Kranichweg 8<br>
                31855 Aerzen<br>
                Tel: 05154-4954<br>
                E-Mail: buerger-energie.hummetal@t-online.de
              </div>
            </div>
            
            <div>
              <h4 class="font-semibold mb-4 text-white text-sm">Navigation</h4>
              <nav class="space-y-2 text-xs">
                <a href="/" class="block text-gray-300 hover:text-green-500 transition-colors">Home</a>
                <a href="/ueber-uns" class="block text-gray-300 hover:text-green-500 transition-colors">Über uns</a>
                <a href="/projekte" class="block text-gray-300 hover:text-green-500 transition-colors">Projekte</a>
                <a href="/aktuelles" class="block text-gray-300 hover:text-green-500 transition-colors">Aktuelles</a>
              </nav>
            </div>
            
            <div>
              <h4 class="font-semibold mb-4 text-white text-sm">Rechtliches</h4>
              <nav class="space-y-2 text-xs">
                <a href="/impressum" class="block text-gray-300 hover:text-green-500 transition-colors">Impressum</a>
                <a href="/datenschutz" class="block text-gray-300 hover:text-green-500 transition-colors">Datenschutz</a>
                <a href="/satzung" class="block text-gray-300 hover:text-green-500 transition-colors">Satzung</a>
              </nav>
            </div>
          </div>
          
          <div class="border-t border-gray-800 mt-8 pt-8 text-center text-xs text-gray-400">
            &copy; {new Date().getFullYear()} Bürger-Energie Hummetal eG. Alle Rechte vorbehalten.
          </div>
        </div>
      </footer>
    </div>
    
    <!-- Mobile Menu Script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const button = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu');
        
        button?.addEventListener('click', () => {
          menu?.classList.toggle('hidden');
        });
      });
    </script>
  </body>
</html>
