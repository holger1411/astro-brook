---
import BaseLayout from '../layouts/BaseLayout.astro';
import MembershipCTA from '../components/MembershipCTA.astro';
import { formatDate } from '../utils/date';
import { getCollection } from 'astro:content';

// Lade alle News aus der Content Collection
const allNews = await getCollection('news');

// Sortiere nach Datum (neueste zuerst)
const sortedNews = allNews.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout 
  title="Aktuelles" 
  description="Aktuelle Nachrichten, Mitteilungen und Presseberichte der Bürger-Energie Hummetal eG"
>
  <div class="max-w-5xl mx-auto px-4 py-16">
    
    <!-- Header Section -->
    <header class="mb-12 text-center" transition:animate="fade">
      <h1 class="text-5xl font-bold mb-4">Aktuelles</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        Bleiben Sie auf dem Laufenden über unsere Projekte und aktuelle 
        Entwicklungen in der regionalen Energiewende
      </p>
    </header>

    <!-- News List -->
    <div class="border-b border-gray-200 dark:border-gray-700" transition:animate="fade">
      {sortedNews.map((news) => (
        <article class="border-t border-gray-200 dark:border-gray-700 py-[4vh] xl:py-8">
          <div class="space-y-2">
            <!-- Title and Date Row -->
            <div class="flex flex-col sm:flex-row justify-between items-start gap-2 mb-2">
              <h2 class="text-xl md:text-3xl xl:text-4xl text-gray-900 dark:text-gray-100">
                <a href={`/aktuelles/${news.slug}`} class="hover:underline">
                  {news.data.title}
                </a>
              </h2>
              <time datetime={news.data.date.toISOString()} class="text-sm text-gray-500 dark:text-gray-400 shrink-0 sm:text-right">
                {formatDate(news.data.date)}
              </time>
            </div>
            
            <!-- Category Tag -->
            <div class="mb-4">
              <span class="inline-flex items-center rounded-md bg-gray-100 dark:bg-gray-800 px-2.5 py-0.5 text-xs font-medium text-gray-800 dark:text-gray-200">
                {news.data.category}
              </span>
            </div>
            
            <!-- Excerpt -->
            <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
              {news.data.excerpt}
            </p>
            
            <!-- Read More Link -->
            <div>
              <a 
                href={`/aktuelles/${news.slug}`}
                class="text-sm font-medium hover:underline py-1 inline-block text-gray-900 dark:text-gray-100"
              >
                Mehr erfahren <span aria-hidden="true">→</span>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- CTA Section -->
    <MembershipCTA />

  </div>
</BaseLayout>
