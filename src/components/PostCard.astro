---
import { formatDate } from '../utils/date';

interface Props {
  post: {
    slug: string;
    url: string;
    frontmatter: {
      title: string;
      date: string;
      excerpt: string;
      image?: string;
      tags?: string[];
    };
  };
  showImage?: boolean;
  showExcerpt?: boolean;
  showTags?: boolean;
}

const { post, showImage = true, showExcerpt = true, showTags = true } = Astro.props;
const { title, date, excerpt, image, tags } = post.frontmatter;
---

<article class="border-t py-[4vh]">
  <div class="space-y-2">
    <div class="flex flex-col sm:flex-row justify-between items-start gap-2 mb-2">
      <h2 class="text-3xl md:text-4xl">
        <a href={post.url} class="hover:underline">
          {title}
        </a>
      </h2>
      <div class="text-gray-500 dark:text-gray-400 text-sm shrink-0 sm:ml-4 sm:text-right">{formatDate(date)}</div>
    </div>
    {showImage && image && (
      <a href={post.url} class="block aspect-video overflow-hidden rounded-lg">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover transition-transform hover:scale-105"
        />
      </a>
    )}
    {showExcerpt && (
      <>
        <p class="text-gray-500 dark:text-gray-400">{excerpt}</p>
        <div>
          <a href={post.url} class="text-sm font-medium hover:underline">
            Read more →
          </a>
        </div>
      </>
    )}
    {showTags && tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2 pt-2">
        {tags.map((tag) => (
          <a
            href={`/tags/${tag}`}
            class="inline-flex items-center rounded-md bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-800 hover:bg-gray-200"
          >
            {tag}
          </a>
        ))}
      </div>
    )}
  </div>
</article>

<style>
  /* Custom styles für Tag-Links im Dark Mode */
  :global(.dark) article a[href^="/tags/"] {
    background-color: #222222;
    color: #e5e7eb;
  }
  
  :global(.dark) article a[href^="/tags/"]:hover {
    background-color: #333333;
  }
</style>
