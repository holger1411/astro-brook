---
// Define the props for the component
interface Props {
  prevPost: {
    url: string;
    title: string;
  } | null;
  nextPost: {
    url: string;
    title: string;
  } | null;
}

const { prevPost, nextPost } = Astro.props;
---

<nav class="mt-12 pt-8 border-t border-gray-200">
  <div class="flex flex-col sm:flex-row justify-between gap-4">
    {prevPost ? (
      <a 
        href={prevPost.url} 
        class="post-nav-link items-start"
      >
        <span class="post-nav-direction">Previous Post</span>
        <span class="post-nav-title">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          {prevPost.title}
        </span>
      </a>
    ) : (
      <div></div>
    )}
    
    {nextPost ? (
      <a 
        href={nextPost.url} 
        class="post-nav-link items-end text-right"
      >
        <span class="post-nav-direction">Next Post</span>
        <span class="post-nav-title">
          {nextPost.title}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </span>
      </a>
    ) : (
      <div></div>
    )}
  </div>
</nav>

