---
import PostCard from './PostCard.astro';

interface Props {
  posts: any[];
  showImages?: boolean;
  showExcerpt?: boolean;
  showSeparators?: boolean;
  showTags?: boolean;
}

const { posts, showImages = true, showExcerpt = true, showSeparators = false, showTags = true } = Astro.props;
---

<div class="border-b">
  {posts.map((post, index) => (
    <>
      <PostCard post={post} showImage={showImages} showExcerpt={showExcerpt} showTags={showTags} />

    </>
  ))}
</div>
